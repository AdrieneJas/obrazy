<% @pins.each do |pin| %>
  <% if pin.cover_image.attached? %>
    <%= link_to pin_path(pin) do %>
      <%= image_tag pin.cover_image.variant(resize: "200x200") %>
    <% end %>
  <% end %><br/>

  <%= pin.description %><br/>

  <% if pin.user == current_user %>
    <%= link_to 'Edytuj', edit_pin_path(pin) %><br/>
    <%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Jesteś pewien?' } %><br/>
  <% end %>

<% end %>
<br>
<%= link_to "Nowy pin", new_pin_path %>