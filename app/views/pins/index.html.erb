<p style="color: green"><%= notice %></p>
<table>
  <h1>Lista pinów</h1>
  <thead>
    <tr>
      <th>Obraz</th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td>
          <% if pin.cover_image.attached? %>
            <%= image_tag pin.cover_image.variant(resize: "200x200") %>
          <% end %>
        </td>
        <td><%= pin.description %></td>
        <td><%= link_to 'Wyświetl', pin %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edytuj', edit_pin_path(pin) %></td>
          <td><%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Nowy pin", new_pin_path %>